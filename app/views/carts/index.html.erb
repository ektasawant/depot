<h1>Listing carts</h1>
<table>
<% @carts.each do |cart| %>
<td class="list_actions">
<%= link_to 'Show', cart %><br/>
<%= link_to 'Edit', edit_cart_path(cart) %><br/>
<%= link_to 'Destroy', cart, method: :delete,
data: { confirm: 'Are you sure?' } %>
</td>
</tr>
<% end %>
</table>
<br />
<%= link_to 'New cart', new_cart_path %>