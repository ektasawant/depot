<head>
	<title>Edit product <%= @product.id %></title>
</head>
<h1>New Ad </h1>
<%= form_for(@product,:url=> { :action=> "update" }) do |f| %>
<p><b>Title</b><br /><%= f.text_field :title %></p>
<p><b>Description</b><br /><%=f.text_area :description %></p>
<p><b>Img url</b><br /><%= f.text_field :image_url%></p>
<% byebug %>
<p><b>Price</b><br /><%= f.text_field :price %></p>
<p><b> Locale: </b></br><%=f.check_box :locale, value: 'es' %>es
                    <%=f.check_box :locale, value: 'en' %>en </p>
<p><%= f.submit "Update" %></p>

<% end %>
</html>